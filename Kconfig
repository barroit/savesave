mainmenu "Savesave/$(BUILD)-$(ARCH) $(SAVESAVE_VERSION) Configuration"

menu "Compiler"

choice
	prompt "CC"

config CC_IS_GCC
	bool "gcc"
	depends on $(BUILD) = "linux"

config CC_IS_CLANG
	bool "clang"

endchoice

choice
	prompt "CXX"
	depends on $(BUILD) != "linux"

config CXX_IS_CLANG
	bool "clang++"

endchoice

config CC_NAME
	string
	default "gcc" if CC_IS_GCC
	default "clang" if CC_IS_CLANG

config CXX_NAME
	string
	default "g++" if CXX_IS_GCC
	default "clang++" if CXX_IS_CLANG

choice
	prompt "Debug level"
	default COMPILER_DEBUG_3

config COMPILER_DEBUG_0
	bool "0 - produces no debug information at all"

config COMPILER_DEBUG_1
	bool "1 - produces minimal information"

config COMPILER_DEBUG_2
	bool "2 - produces more information"

config COMPILER_DEBUG_3
	bool "3 - includes as much information as possible"

endchoice

choice
	prompt "Optimizations"
	default COMPILER_OPTIMIZE_0

config COMPILER_OPTIMIZE_0
	bool "0 - reduce compilation time"

config COMPILER_OPTIMIZE_1
	bool "1 - optimize a little"

config COMPILER_OPTIMIZE_2
	bool "2 - optimize even more"

config COMPILER_OPTIMIZE_3
	bool "3 - optimize yet more"

endchoice

config SOURCE_NDEBUG
	bool "define NDEBUG"

config COMPILER_WARNING_ALL
	bool "use -Wall"
	default y

config COMPILER_WARNING_EXTRA
	bool "use -Wextra"

endmenu # "Compiler"

menu "Features"

config CNTRL_CHAR_REPLACEMENT
	string "control char replacement"
	default "ï¿½"

config DEFAULT_SAVCONF_BASENAME
	string "basename of savconf"
	default ".savesave"

config DEFAULT_SAVCONF_ENVNAME
	string "getenv name of savconf"
	default "SAVESAVE"

config ARCHIVE_EXTENTION
	string "file extension for archive file (no dot)"
	default "zst"

config TEMPORARY_EXTENTION
	string "file extension for temporary directory (no dot)"
	default "tmp"

endmenu # "Features"

menu "Threshold"

config DO_COMPRESS_THRESHOLD
	int "size threshold for compression (in KiB)"
	default 30720

config DO_SNAPSHOT_THRESHOLD
	int "threshold for creating snapshot (in MiB)"
	default 102400

config DO_MMAP_THRESHOLD
	int "threshold for using mmap (in MiB)"
	default 102400

config DO_LINE_WRAP_THRESHOLD
	int "threshold for line wrap"
	default 80

endmenu # "Threshold"

menu "Zstandard"

config LINK_LIBZSTD_STATIC
	bool "link against libzstd static library"

endmenu # "Zstandard"

menu "Debugging"

config DISABLE_CONSOLE_OUTPUT
	bool "disable console output"
	depends on $(BUILD) = "windows"

config SUPPRESS_ANNOTATED_LEAKS
	bool "suppress annotated leaks"

config MAX_DUMP_STACK
	int "max dump stack (up to USHRT_MAX)"
	depends on $(BUILD) = "windows"
	default 64

endmenu # "Debugging"
