{
	"configurations": [
		{
			"name": "gcc",
			"defines": [
				"_GNU_SOURCE"
			],
			"intelliSenseMode": "linux-gcc-x64",
			"includePath": [
				"${workspaceFolder}/include"
			],
			"compilerPath": "${env:HOME}/.local/bin/gcc",
			"forcedInclude": [
				"${workspaceFolder}/include/compat.h",
				"${workspaceFolder}/include/generated/*.h"
			]
		},
		{
			"name": "mingw64",
			"defines": [
				"_GNU_SOURCE",
				"NTDDI_WIN7",
				"WINVER=_WIN32_WINNT_WIN7",
				"_WIN32_WINNT=_WIN32_WINNT_WIN7"
			],
			"intelliSenseMode": "windows-gcc-x64",
			"includePath": [
				"${workspaceFolder}/include"
			],
			"forcedInclude": [
				"${workspaceFolder}/include/compat.h",
				"${workspaceFolder}/include/generated/*.h"
			],
			"compilerPath": "/usr/bin/x86_64-w64-mingw32-gcc"
		}
	],
	"version": 4
}
